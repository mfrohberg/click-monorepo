FROM elixir:1.5.1

RUN apt-get update -qq && \
    apt-get install -y \
      build-essential \
      vim \
      git \
      libpq-dev \
      postgresql-client-9.4

ENV APP_HOME=/usr/src/click-api/
ENV MIX_ENV=prod
WORKDIR $APP_HOME

COPY mix* $APP_HOME
RUN mix local.hex --force
RUN mix local.rebar --force
RUN mix deps.get

COPY config $APP_HOME/config
RUN mix deps.compile

COPY . $APP_HOME
RUN mix compile
